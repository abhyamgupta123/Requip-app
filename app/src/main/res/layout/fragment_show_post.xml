<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".showPostFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/samanpost_image"
                    android:layout_width="match_parent"
                    android:layout_height="276dp"
                    android:layout_gravity="center"
                    android:background="@drawable/gradient"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:srcCompat="@color/material_on_background_disabled" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/flagbtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/ic_flag"
                    app:layout_constraintBottom_toBottomOf="@+id/samanpost_image"
                    app:layout_constraintEnd_toEndOf="@+id/samanpost_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingStart="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/samanpost_image"
                    tools:ignore="MissingConstraints,RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/call"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:outlineProvider="bounds"
                        android:shadowColor="@android:color/black"
                        android:text="Call"
                        tools:ignore="HardcodedText,MissingConstraints,UnusedAttribute"
                        tools:layout_editor_absoluteX="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/chat"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="60dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:outlineProvider="bounds"
                        android:shadowColor="@android:color/black"
                        android:text="Chat"
                        tools:ignore="HardcodedText,MissingConstraints,UnusedAttribute"
                        tools:layout_editor_absoluteX="16dp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/samanpost_secondlayout"
                layout="@layout/fragment_show_post_2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>