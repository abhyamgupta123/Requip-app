<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".profileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_user_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="MissingConstraints"
                android:src="@drawable/iitjammu"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/college_blue_light"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="6dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_user_image"
                tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/profile_name"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:textSize="22dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : " />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_card6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/college_blue_light"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="6dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_user_image"
                tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/profile_username"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:textSize="22dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username : " />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                app:cardBackgroundColor="@color/college_blue_light"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="6dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_user_image"
                tools:ignore="MissingConstraints">


                <TextView
                    android:id="@+id/profile_email"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textSize="22dp"
                    android:paddingLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email : " />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                app:cardBackgroundColor="@color/college_blue_light"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="6dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_card1"
                tools:ignore="MissingConstraints">


                <TextView
                    android:id="@+id/profile_description"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textSize="22dp"
                    android:paddingLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About : " />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                app:cardBackgroundColor="@color/college_blue_light"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="6dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_card2"
                tools:ignore="MissingConstraints">


                <TextView
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textSize="20dp"
                    android:id="@+id/profile_phone"
                    android:paddingLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="phone : " />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>